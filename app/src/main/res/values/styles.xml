<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="box_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/box_size</item>
        <item name="android:background">@color/boxesBackground</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="status_card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/box_size</item>
        <item name="android:background">@color/greenDark</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="status_card_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_holder_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:background">@color/header</item>
    </style>

    <style name="h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="clickable_item_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/medium_margin</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="item_icon">
        <item name="android:textColor">#323232</item>
        <item name="android:layout_width">@dimen/item_icon_size</item>
        <item name="android:layout_height">@dimen/item_icon_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
    </style>

</resources>